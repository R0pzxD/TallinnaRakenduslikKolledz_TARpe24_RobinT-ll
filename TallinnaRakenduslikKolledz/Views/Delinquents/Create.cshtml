@model TallinnaRakenduslikKolledz.Models.Delinquent

@{
	ViewData["Title"] = "Lisa uus kuritegu";

}

<h1>Lisa uus kuritegu</h1>
<hr />
<div class="row">
	<div class="col-mid-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="LastName" class="control-label"></label>
				<input asp-for="LastName" class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FirstName" class="control-label"></label>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="isTeacherOrStudent" class="control-label"></label>
				<input type="checkbox" name="isTeacherOrStudent" class="form-control" value="false" unchecked />
				<span asp-validation-for="isTeacherOrStudent" class="text-danger"></span>
			</div>
			
			<div>
				<label asp-for="Violation" class="control-label"></label>
				<select asp-for="Violation" asp-items="@Html.GetEnumSelectList<Violation>() ">
					<option>-- choose violation type --</option>
				</select>
				<span asp-validation-for="Violation" class="text-danger"></span>
				
			</div>
			<div class="form-group">
				<input type="checkbox" value="Sisesta" class="btn btn-primary" @*  *@ />
			</div>
		</form>

	</div>
</div>
<div>
	<a asp-action="Index">Mine tagasi Loendisse</a>
</div>
   